<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffcfe4ff"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hi-Scores"
        android:textSize="50sp"
        android:layout_margin="15dp"
        android:id="@+id/player_textView"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Player Name"
        android:textSize="25sp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:id="@+id/player_name_textView"
        android:layout_alignTop="@+id/games_won_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Games won"
        android:textSize="25sp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:id="@+id/games_won_textView"
        android:layout_gravity="right"
        android:layout_below="@+id/player_textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/hi_scores_listView"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/player_name_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starting Screen"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="25sp"
        android:id="@+id/main_menu_button"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/player_textView"
        android:layout_alignStart="@+id/player_textView"
        android:background="#ff90a8ff"
        android:onClick="activityMain"/>

</RelativeLayout>